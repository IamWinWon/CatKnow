<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="cat"
            type="ru.mrwinwon.catknowledge.ui.main.recycler.Cat" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/cat"
            android:scaleType="center"
            app:resource="@{cat.avatar}"
            android:src="@drawable/ic_sentiment_neutral_black_24dp" />


        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:text="@string/cats_fact"
            app:resource="@{cat.description}"
            />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            app:resource="@{cat.createdAt}"
            android:text="@string/cats_date"
            />

    </LinearLayout>

</layout>