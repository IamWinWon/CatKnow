<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="cat"
            type="ru.mrwinwon.catknowledge.ui.main.recycler.Cat" />

<!--        <variable-->
<!--            name="resource"-->
<!--            type="ru.mrwinwon.catknowledge.model.remote.Resource" />-->

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/pb_fetching_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="visible"
            app:layout_anchor="@+id/rv_cats"
            app:layout_anchorGravity="center"
            tools:layout_editor_absoluteX="181dp"
            tools:layout_editor_absoluteY="341dp"
            tools:ignore="MissingConstraints" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cats"
            android:layout_width="match_parent"
            android:layout_height="662dp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_add_cat"
            app:resource="@{cat}" />

        <Button
            android:id="@+id/btn_add_cat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/push_button_for_facts"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
